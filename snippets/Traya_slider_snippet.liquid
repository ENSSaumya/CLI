<div class="main_traya_slider">
  <div class="content_traya_slider">
    {% for product in collection.products %}
      {% for meta in product.metafields.custom.details_of_product.value %}
        <div class="grid_traya_slider">
          <div class="image_div_traya_slider">
            <img class="image_traya_slider" src="{{ meta.image | img_url:"master"}}">
          </div>
          <div class="position">
            <div class="container_traya_slider">
              <div class="section_heading_traya_slider">
                <p class="heading_traya_slider">{{ meta.heading }}</p>
                <!-- <img class="batch_slider_traya" src="{{ meta.tag  | img_url:"master"}}"/> -->
              </div>
              <!-- <p class="advantage_li">{{ meta.list_item_text }}</p> -->
              <div class="ingredients_div">
                <img class="image_ingredients_div" src="{{ meta.ingredients | img_url:"master"}}">
                <!--
                  <img class="image_ingredients_div" src="{{ meta.Ingredients_image2 | img_url:"master"}}"/>
                  <img class="image_ingredients_div" src="{{ meta.Ingredients_image3 | img_url:"master"}}"/>
                -->
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
</div>

<style>
  .main_traya_slider{
    width:100%;
  }
  .main_traya_slider .content_traya_slider{
    width:90%;
    margin:auto;
    display:flex;
    background: #FFF6F5;
  }
  .main_traya_slider .grid_traya_slider{
    width:30%;
    margin:5px;
    position:relative;
  }
  .image_traya_slider{
    z-index:2;
    position:relative;
  }
  .position{
    background: #ffffff;
    position: relative;
    height: 40vh;
    bottom: 90px;
    z-index: 1;
  }
  .main_traya_slider .container_traya_slider{
    background:#ffffff;
    position:absolute;
    z-index:1;
    bottom:0;
  }
  .main_traya_slider .container_traya_slider .heading_traya_slider{
    font-family:Nunito Sans;
    font-weight:700;
    font-size:17px;
    line-height:23.19px;
    text-align:center;
  }
  .main_traya_slider .section_heading_traya_slider{
    display:flex;
    justify-content:center;
  }
  .advantage_li{
    font-size:12px;
    font-weight:400;
  }
  .main_traya_slider .ingredients_div{
    display: flex;
    justify-content: center;
    gap: 40px;
  }
</style>

