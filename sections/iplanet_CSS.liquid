{% schema %}
  {
    "name": "iplanet CSS",
    "settings": [],
    "blocks":[{
      "type":"text",
      "name":"Heading",
      "settings":[{
        "type":"html",
        "id":"essential_tools",
        "label":"Heading"
      }]
    },
    {
      "type":"image",
      "name":"Pic",
      "settings":[{
        "type":"image_picker",
        "id":"tab_image_new",
        "label":"Image"
      }]
    },
    {
      "type":"textarea",
      "name":"Text Content",
      "settings":[{
        "type":"html",
        "id":"text_con",
        "label":"Text Input content"
      }]
    },
    {
      "type":"html",
      "name":"Button",
      "settings":[{
        "type":"text",
        "id":"btn_apple",
        "label":"Button"
      },
      {
        "type":"url",
        "id":"redirect",
        "label":"Link"
      }]
    }],
    "presets":[{"name":"iplanet CSS"}]
  }
{% endschema %}

