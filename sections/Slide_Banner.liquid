<div class="Banner">
  {% for block in section.blocks %}
     <p class="align-text" style="text-align:{{ section.settings.select }}">{{ block.settings.txt1 }}</p>
    <img class="align-image" src="{{ block.settings.image1 | img_url: "master" }}"/>
  {% endfor %}
</div>
{% schema %}
  {
    "name": "SlideBanner",
    "settings": [{
          "type":"select",
          "id":"select",
          "label":"Position",
          "options":[{
            "value":"top",
            "label":"Top"
          },
            {
              "value":"right",
              "label":"Right"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"left",
              "label":"Left"
            }
          ]
    }],
    "blocks":[{
      "name":"pick",
      "type":"image",
      "settings":[
        {
              "type":"image_picker",
              "id":"image1",
              "label":"Image"
      },
        {
          "type":"text",
          "id":"txt1",
          "label":"Text"
        }
      ]
        }],
    "presets":[{"name":"SlideBanner"}]
  }
{% endschema %}

