<div class="main_traya_slider">
  <div class="content_traya_slider">
    {% for block in section.blocks %}
    <div class="image_div_traya_slider">
      <img class="image_traya_slider" src="{{ block.settings.main_img1 | img_url:"master"}}"/>
    </div>
    <div class="container_traya_slider">
      <p class="heading_traya_slider">{{ block.settings.Heading_text }}</p>
      <ul class="">
        <li class="advantage_li">{{ block.settings.list_item_text }}</li>
      </ul>
      <div class="ingredients_div1">
        <img class="image_ingredients_div1" src="{{ block.settings.Ingredients_image1 | img_url:"master"}}"/>
        <p class="text_ingredients_div1">{{ block.settings.Ingredients_text1 }}</p>
      </div>
      <div class="ingredients_div2">
        <img class="image_ingredients_div2" src="{{ block.settings.Ingredients_image2 | img_url:"master"}}"/>
        <p class="text_ingredients_div2">{{ block.settings.Ingredients_text2 }}</p>
      </div>
      <div class="ingredients_div3">
        <img class="image_ingredients_div3" src="{{ block.settings.Ingredients_image3 | img_url:"master"}}"/>
        <p class="text_ingredients_div3">{{ block.settings.Ingredients_text3 }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Traya Slider",
    "settings": [],
    "blocks":[{
      "name":"PICK",
      "type":"Text",
      "settings":[{
        "type":"image_picker",
        "id":"main_img1",
        "label":"Main Image"
      },
      {
        "type":"text",
        "id":"Heading_text",
        "label":"Heading"
      },
      {
        "type":"textarea",
        "id":"list_item_text",
        "label":"Advantages"
      },
      {
        "type":"image_picker",
        "id":"Ingredients_image1",
        "label":"Ingredients Image1"
      },
      {
        "type":"text",
        "id":"Ingredients_text1",
        "label":"Ingredients Text1"
      },
      {
        "type":"image_picker",
        "id":"Ingredients_image2",
        "label":"Ingredients Image2"
      },
      {
        "type":"text",
        "id":"Ingredients_text2",
        "label":"Ingredients Text2"
      },
      {
        "type":"image_picker",
        "id":"Ingredients_image3",
        "label":"Ingredients Image3"
      },
      {
        "type":"text",
        "id":"Ingredients_text3",
        "label":"Ingredients Text3"
      }]
    }],
    "presets":[{"name":"Traya Slider"}]
  }
{% endschema %}

