<div class="iplanet_new_main">
  <div class="container_new">
  {% assign blocks = section.blocks %}
    {% for new_block in blocks %}
      {{ new_block.settings.essential_tools }}
    {% endfor %}
    <div class="parent_class">
      <div class="img_block_div">
        {% for Tab_Image in blocks %}
          {% if Tab_Image.settings.tab_image_new != blank %}
            <img class="img_apple" src="{{ Tab_Image.settings.tab_image_new | img_url:"400x" }}" >
          {% endif %}
        {% endfor %}
      </div>
      <div class="opac_text">
        {% for text_block in blocks %}
          {{ text_block.settings.text_con }}
        {% endfor %} 
        <div class="button_div">
          {% for btn in blocks %}
            <a href="{{ btn.settings.redirect }}"><span class="btn_iplanet">{{ btn.settings.btn_apple }}</span></a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "iplanet CSS",
    "settings": [],
    "blocks":[{
      "type":"text",
      "name":"Heading",
      "settings":[{
        "type":"html",
        "id":"essential_tools",
        "label":"Heading"
      }]
    },
    {
      "type":"image",
      "name":"Pic",
      "settings":[{
        "type":"image_picker",
        "id":"tab_image_new",
        "label":"Image"
      }]
    },
    {
      "type":"textarea",
      "name":"Text Content",
      "settings":[{
        "type":"html",
        "id":"text_con",
        "label":"Text Input content"
      }]
    },
    {
      "type":"html",
      "name":"Button",
      "settings":[{
        "type":"text",
        "id":"btn_apple",
        "label":"Button"
      },
      {
        "type":"url",
        "id":"redirect",
        "label":"Link"
      }]
    }],
    "presets":[{"name":"iplanet CSS"}]
  }
{% endschema %}

