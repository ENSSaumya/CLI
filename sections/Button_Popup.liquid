<div class="cont">
  <button class="popbtn" type="button">Click</button>
  <div class="popuptext" id="mypop">
    <p>This is a pop up</p>
  </div>
</div>

<div class="pseudo_shape">
  <div class="triangle_content">
    
  </div>
</div>
{% schema %}
  {
    "name": "pop up",
    "settings": [],
    "presets":[{"name":"pop up"}]
  }
{% endschema %}

<style>
  .cont
  {
    justify-content: center;
    position: relative;
    display: flex;
    padding: 20px;
    margin-top: 15%;
    cursor: pointer;
    align-items: center;
    justify-content: center;
  }
 .popuptext
  {
    text-align: center;
    position: absolute;
    width: 400px;
    background-color: #ed3131;
    color: white;
    border-radius: 10px;
    padding: 5px;
    z-index: 1;
    bottom: 125%;
    left: 50%;
    margin-left: auto;
    transform: translate(-50%, -50%);
    visibility: hidden;
  }
  .popbtn
  {
    width: 20%;
    height: 5%;
    border-color: black;
    border-radius: 25px;
    font-size: 16px;
    padding: 6px;
  }
  .popbtn .popuptext::after
  {
    content:"";
    position:absolute;
    top:95%;
    left:54%;
    border-color:red;
    border-width:5px;
    border-style:solid;
  }
  .show{
    visibility: visible;
  }
   .popbtn .show
  {
    visibility:visible;
    animation:fadeIn 1s;
  }
  @keyframes fadeIn
  {
    from {opacity: 0;}
    to {opacity: 1;}
  } 


  
</style>

<script>
    var btn = document.querySelector(".popbtn");
    var popup = document.querySelector(".popuptext");
    btn.addEventListener("click", function() {
    popup.classList.toggle('show');
    });
</script>
