// On press of button of collection its CSS changes
var color_btn = document.querySelectorAll(".btn_collection");
color_btn.forEach((item) => {
  color_btn[0].classList.add("clr_svg", "clr_text", "clr_background");
  item.addEventListener("click", () => {
    color_btn.forEach((btn) => {
      btn.classList.remove("clr_svg", "clr_text", "clr_background");
    });
    item.classList.add("clr_svg", "clr_text", "clr_background");
  });
});

// On Click Of Collection button product of that particular collection is shown
var collection_btn = document.querySelectorAll(".collection_link");  
var product_div = document.querySelectorAll(".content_traya_slider");
collection_btn.forEach((btn, index) => {
  btn.addEventListener("click", () => {
    product_div.forEach((ele) => {
      ele.style.display = "none";
    });
    product_div[index].style.display = "block";
  });
});

</script>