<div class="main_traya_slider">
  <div class="content_traya_slider">
    <div class="grid_traya_slider">
      {% for product in collection.products %}
      <div class="image_div_traya_slider">
        <img class="image_traya_slider" src="{{ block.settings.main_img1 | img_url:"master"}}"/>
      </div>
      <div class="container_traya_slider">
        <div class="section_heading_traya_slider">
          <p class="heading_traya_slider">{{ block.settings.Heading_text }}</p>
          <img class="batch_slider_traya" src="{{ block.settings.tag  | img_url:"master"}}"/>
        </div>
        <p class="advantage_li">{{ block.settings.list_item_text }}</p>
        <div class="ingredients_div">
          <img class="image_ingredients_div" src="{{ block.settings.Ingredients_image1 | img_url:"master"}}"/>
          <img class="image_ingredients_div" src="{{ block.settings.Ingredients_image2 | img_url:"master"}}"/>
          <img class="image_ingredients_div" src="{{ block.settings.Ingredients_image3 | img_url:"master"}}"/>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>