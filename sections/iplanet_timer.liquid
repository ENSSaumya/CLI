{% render 'Traya_slider_snippet' %}
<div class="main_iplanet_timer">
  <div class="content_iplanet_timer">
    <div class="heading_timer">
      <h2>{{ section.settings.text_timer }}</h2>
    </div>
    <div class="div_timer">
      <div class="div_timer1">
        <span id="timer1">0</span>
        <p>Years</p>
      </div>
      <div class="div_timer2">
        <span id="timer2">0</span>
        <p>Locations</p>
      </div>
      <div class="div_timer3">
        <span id="timer3">0</span>
        <p>Cities</p>
      </div>
      <div class="div_timer4">
        <span id="timer4">0</span><span class="timer4_plus">+</span>
        <p>Apple Experts</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "iPlanet_timer",
  "settings": [{
    "type": "text",
    "id": "text_timer",
    "label": "Heading"
  }],
  "presets": [{ "name": "iPlanet_timer" }]
}
{% endschema %}

<style>
  .main_iplanet_timer {
    padding: 4% 20% 4% 20%;
  }

  .main_iplanet_timer .content_iplanet_timer {
    width: 100%;
  }

  .main_iplanet_timer .heading_timer h2 {
    text-align: center;
    line-height: 1.3;
    font-size: 40px;
    color: #16172B;
  }

  .main_iplanet_timer .div_timer {
    display: flex;
    justify-content: space-around;
    text-align: center;
  }

  .main_iplanet_timer .div_timer span {
    color: #3E3E45;
    font-size: 50px;
    font-weight: 600;
    line-height: 1;
  }

  .main_iplanet_timer .div_timer p {
    font-size: 19px;
    font-weight: 400;
    line-height: 2.5;
    text-align: center;
    margin-top: 0;
  }

  @media (max-width: 767px) {
    .main_iplanet_timer .div_timer {
      display: block;
    }
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .main_iplanet_timer .div_timer {
      display: flex;
    }
  }
</style>

<script>
  function countdown(timerId, limit, interval, elementId) {
      let timer = 0;

      function updateTimer() {
          timer++;
          document.getElementById(elementId).innerHTML = String(timer);

          if (timer < limit) {
              setTimeout(updateTimer, interval);
          }
      }
      setTimeout(updateTimer, 1000);
  }

    window.addEventListener("load", () => {
      countdown(1, 11, 150, "timer1");
      countdown(2, 52, 30, "timer2");
      countdown(3, 12, 140, "timer3");
      countdown(4, 19, 90, "timer4");
  });
</script>
