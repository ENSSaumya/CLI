<div class="brand_main">
  {% for block in section.blocks %}
  <div class="header_nav_brand">
    <div class="brand_logo">
      <img src="{{ block.settings.brand_logo | img_url:'master' }}" />
    </div>
    <ul class="nav_menu_list">
    {% for link in block.settings.header_menu.links %}
      {% if link.url != blank %} <a href="{{ link.url }}"><li>{{ link.title }}</li></a> {% endif %}
    {% endfor %}
    </ul>
  </div>
  {% endfor %}
</div>
{% schema %}
  {
    "name": "brand_utm",
    "settings": [],
    "blocks": [{
      "type":"image_picker",
      "name":"Choose Brand",
      "settings": [{
        "type": "image_picker",
        "id":"brand_logo",
        "label":"Brand Logo"
      },
      {
        "type":"link_list",
        "id":"header_menu",
        "label":"Header Menu List"
      },
      {
        "type":"color_background",
        "id":"background_header",
        "label":"Background Color Header"
      },
      {
        "type":"html",
        "id":"cart_icon",
        "label": "Cart"
      },
      {
        "type":"html",
        "id":"human_icon",
        "label":"Login/Register"
      },
      {
        "type":"html",
        "id":"track_icon",
        "label":"Track icon"
      }]
    }],
    "presets": [{"name":"brand_utm"}]
  }
{% endschema %}

<style>
  .header_nav_brand{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }
  .nav_menu_list{
    display: contents;
    list-style: none;
  }
  .nav_menu_list a{
    text-decoration: none;
  }
</style>