<div class="brand_main">
  {% for block in section.blocks %}
  <div class="header_nav_brand">
    <div class="brand_logo">
      <img src="{{ block.settings.brand_logo | img_url:'master' }}" width="" height=""/>
    </div>
    <ul class="nav_menu_list">
    {% for link in block.settings.header_menu.links %}
      {% if link.url != blank %} <a href="{{ link.url }}"><li>{{ link.title }}</li></a> {% endif %}
    {% endfor %}
    <li>
      {% if block.settings.cart_icon != blank %}<span style="order:{{ block.settings.position_cart }}px">{{ block.settings.cart_icon }}</span> {% endif %}
      {% if block.settings.track_icon != blank %}<span style="order:{{ block.settings.position_track }}px">{{ block.settings.track_icon }}</span> {% endif %}
      {% if block.settings.human_icon != blank %}<span style="order:{{ block.settings.position_login }}px">{{ block.settings.human_icon }}</span> {% endif %}
    </li>
    </ul>
  </div>
  {% endfor %}
</div>
{% schema %}
  {
    "name": "brand_utm",
    "settings": [],
    "blocks": [{
      "type":"Header",
      "name":"Add header",
      "settings": [
        {
          "type": "range",
          "id": "padding_top",
          "min": 10,
          "max": 80,
          "step": 2,
          "unit": "px",
          "label": "Padding Top",
          "default": 16
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 10,
          "max": 80,
          "step": 2,
          "unit": "px",
          "label": "Padding Bottom",
          "default": 16
      },
      {
        "type": "image_picker",
        "id":"brand_logo",
        "label":"Brand Logo"
      },
      {
        "type":"link_list",
        "id":"header_menu",
        "label":"Header Menu List"
      },
      {
        "type":"color",
        "id":"background_header",
        "label":"Background Color Header"
      },
      {
        "type":"color",
        "id":"font_color_header",
        "label":"Font Color Header"
      },
      {
        "type":"html",
        "id":"cart_icon",
        "label": "Cart"
      },
      {
        "type":"text",
        "id":"position_cart",
        "label": "Position of Cart"
      },
      {
        "type":"html",
        "id":"human_icon",
        "label":"Login/Register"
      },
      {
        "type":"text",
        "id":"position_login",
        "label": "Position of Login/Register"
      },
      {
        "type":"html",
        "id":"track_icon",
        "label":"Track icon"
      },
      {
        "type":"text",
        "id":"position_track",
        "label": "Position of Track Order"
      }]
    }],
    "presets": [{"name":"brand_utm"}]
  }
{% endschema %}

{% style %}
{% for block in section.blocks %}
  .header_nav_brand{
    background-color:{{ block.settings.background_header }}; 
    padding-top:{{ block.settings.padding_top }}px;
    padding-bottom:{{ block.settings.padding_bottom }}px;
  }
  .nav_menu_list li{
    color: {{block.settings.font_color_header}}
  }
{% endfor %}
{% endstyle %}

<style>
  .header_nav_brand{
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }
  .nav_menu_list{
    display: contents;
    list-style: none;
  }
  .nav_menu_list a{
    text-decoration: none;
  }
  .nav_menu_list li:last-child{
    display: flex;
    align-content: center;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 15px;
  }
</style>