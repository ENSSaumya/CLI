<div class="main_3_scientific">
  <div class="conetnt_scientific">
    <div class="heading_traya_scientific">
      <h3>{{ section.settings.heading_scientific }}</h3>
    </div>
    <div class="passage_traya_scientific">
      <p>{{ section.settings.passage_scientific }}</p>
    </div>
    <div class="btn_traya_scientific">
      {% for block in section.blocks %}
      <span class="collection_link" tab="{{ forloop.index }}" href="{{ block.settings.Link_url }}" style="text-decoration:none">
        <div class="btn_collection">
          <span>{{ block.settings.collection_name }}</span>
          <p>{{ block.settings.Collection_heading }}</p>
        </div>
      </span>
      {% endfor %}
    </div>
  </div>
</div>

<div class="main_traya_slider">
  {% for combo in section.blocks %}
  <div class="content_traya_slider" id="slider_{{ forloop.index }}">
    {% assign collection = combo.settings.collection_product %}
      {% for product in collection.products %}
      <div class="grid_traya_slider" tab="{{ forloop.index }}">
        <div class="image_div_traya_slider">
          <img class="image_traya_slider" src="{{ product.metafields.custom.image | img_url:"master"}}">
        </div>
        <div class="position">
          <div class="container_traya_slider">
            <div class="section_heading_traya_slider">
              <p class="heading_traya_slider">{{ product.title }}</p>
            </div>
            <div class="ingredients_div">
              {% for meta in product.metafields.custom.bottom_meta.value %}
                <div class="div_img1">
                  <img class="image_ingredients_div" src="{{ meta.image | img_url:"master"}}">
                </div>
              {% endfor %}
            </div>
            <div class="dosage_div">
              <span>{{ combo.settings.dosage_svg }}</span>
              <p>{{ combo.settings.dosage_text }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
      </div>
    {% endfor %}
</div>
{% schema %}
{
  "name": "Traya_scientific",
  "settings": [{
    "type":"text",
    "id":"heading_scientific",
    "label":"Heading"
  },
  {
    "type":"textarea",
    "id":"passage_scientific",
    "label":"Content"
  }],
  "blocks":[{
    "name":"Collection Button",
    "type":"text",
    "settings":[{
      "type":"html",
      "id":"collection_name",
      "label":"Icon SVG"
    },
    {
      "type":"text",
      "id":"Collection_heading",
      "label":"Collection Heading"
    },
    {
      "type":"collection",
      "id":"collection_product",
      "label":"Collection"
    },
    {
      "type":"html",
      "id":"dosage_svg",
      "label":"Icon for Dosage"
    },
    {
      "type":"text",
      "id":"dosage_text",
      "label":"Duration of Dosage"
    }]
  }],
  "presets":[{"name":"Traya_scientific"}]
}
{% endschema %}

