<div class="main_3_scientific">
  <div class="conetnt_scientific">
    <div class="heading_traya_scientific">
      <h3>{{ section.settings.heading_scientific }}</h3>
    </div>
    <div class="passage_traya_scientific">
      <p>{{ section.settings.passage_scientific }}</p>
    </div>
    {% for block in section.blocks %}
      <div class="btn_traya_scientific">
        <span>{{ block.settings.collection_name }}</span>
        <p>{{ block.settings.Collection_heading }}</p>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Traya_scientific",
  "settings": [{
    "type":"text",
    "id":"heading_scientific",
    "label":"Heading"
  },
  {
    "type":"textarea",
    "id":"passage_scientific",
    "label":"Content"
  }],
  "blocks":[{
    "name":"Collection Button",
    "type":"text",
    "settings":[{
      "type":"html",
      "id":"collection_name",
      "label":"Name"
    },
    {
      "type":"text",
      "id":"Collection_heading",
      "label":"Collection Heading"
    }]
  }],
  "presets":[{"name":"Traya_scientific"}]
}
{% endschema %}

<style>
  .main_3_scientific{
    width:100%;
  }
  .conetnt_scientific{
    width:50%;
    margin:auto;
  }
  .heading_traya_scientific{
    text-align:center;
  }
  .passage_traya_scientific p{
    font-family: Nunito Sans;
    font-size: 20px;
    font-weight: 400;
    line-height: 27px;
    letter-spacing: 0em;
    text-align: center;
    color: #989898;
    padding:0 60px;
  }
</style>

