<div class="main_personalize">
  <div class="content_personalize">
    <span class="button_personalize" onclick="">Personalized</span>
  </div>
  <div class="container_personalize">
    <p class="personalize_container">PERSONALIZE YOUR NECKLACE</p>
    <input type="text" placeholder="Enter your text">
    <p class="choose_container">CHOOSE FONT</p>
    {% for block in section.blocks %}
      <span>{{ block.settings.personalize_text }}<a>{{ block.settings.personalize_url }}</a>
      </span>
    {% endfor %}
    <p class="is_this_container">IS THIS A GIFT? ADD GIFT BOX AND A CUSTOM NOTE</p>
    <div class="yes_no">
      <p class="yes_yes_no">YES</p>
      <p class="no_yes_no">NO</p>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Personalize",
    "settings": [],
    "blocks": [
      {
        "name": "Choose",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "personalize_text",
            "label": "Text"
          }, {
            "type": "url",
            "id": "personalize_url",
            "label": "URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Personalize"
      }
    ]
  }
{% endschema %}

<style>
  .main_personalize {
    width: 30%;
  }
  .content_personalize {
    width: 100%;
    color: #ffffff;
    background: #000000;
    font-size: 20px;
    padding: 20px 50px;
  }
</style>