<div class = "hair_main">
  <h3 class="hair_heading">Safe & Effective Hair Routine just for You</h3>
  <div class = "hair_background">
   {% for block in section.blocks %}
    <div class="imageandtext">
        <div class="image_div">
          <img class="img-class" id="img{{ forloop.index }}" src="{{ block.settings.image1 | img_url: "300" }}"/>  
        </div>
        <div class="text-div">
          <p class= "text-class" id="text{{ forloop.index }}">{{ block.settings.text1 }}</p>
        </div>
    </div>
  {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "hair_routine",
    "settings": [],
    "blocks":[{
      "name":"Choose",
      "type":"image",
      "settings":[{
        "type":"image_picker",
        "id":"image1",
        "label":"Image"
      },
      {
        "type":"text",
        "id":"text1",
        "label":"Text"
      }]
    }],
    "presets":[{"name":"hair_routine"}]
  }
{% endschema %}

<style>
  .hair_main
  {
    width:100%;
    align-content:center;
  }
  .hair_heading
  {
    text-align: center;
    font-weight: bold;
    color: #474343;
  }
  .hair_background
  {
    display: grid;
    place-items: baseline;
    grid-template-columns: auto auto auto auto;
    width: 60%;
    border-radius: 20px;
    column-gap: 20px;
    row-gap: 20px;
    margin: auto;
    justify-content: center;
    background-color: #F5F5F5;
    padding: 40px 0px 40px 0px;
  }
  .imageandtext
  {
    justify-content: center;
    width:100%;
    align-content: center;
  }
  .img-class
  {
    place-items: center;
  }
  .image_div
  {
    display: flex;
    place-content: center;
  }
  p.text-class {
    margin: 0px;
    display: flex;
    place-content: center;
  }
  @media only screen and (max-width: 600px) {
  .hair_background
  {
    text-align: center;
    display: flex;
    flex-wrap: wrap;
    width: 90%;
    border-radius: 20px;
    column-gap: 12px;
    row-gap: 19px;
    margin: auto;
    justify-content: center;
    background-color: #F5F5F5;
    padding: 40px 0px 40px 0px;
  }
  p.text-class
  {
    margin: 0px;
    font-size: 10px;
    display: flex;
    place-content: center;
  }
  .img-class  
  {
    place-items: center;
    width: 35px;
  }
    .imageandtext
  {
    justify-content: center;
    width: 30%;
    align-content: center;

  }
}
</style>

