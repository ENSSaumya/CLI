<div class="magnify">
  <div class="magnifier" style="background-image:url({{ product.featured_image }})"></div>
  <div class="magnified">
    <img src="{{ product.featured_image | img_url:'200x' }}"/>
  </div>
</div>

<style>
  .magnify {
    position: absolute;
    display: inline-block;
    top: 50%;
    left: 50%;
    z-index: 99;
  }
  
  .magnified {
    display: block;
    z-index: 10;
    margin: auto;
    height: 600px;
    width: 300px;
    border: 2px solid;
  }
  
  .magnify .magnifier {
    height: 200px;
    width: 200px;
    position: ;
    z-index: 20;
    border: 4px solid white;
    border-radius: 50%;
    background-size: 1000%;
    background-repeat: no-repeat;
    margin-left: -100px !important;
    margin-top: -100px !important;
    pointer-events: none; 
  }
  
  .magnify .magnifier {
    height: 200px;
    width: 200px;
    position: absolute;
    z-index: 20;
    border: 4px solid white;
    border-radius: 50%;
    background-size: 1000%;
    background-repeat: no-repeat;
    margin-left: -100px !important;
    margin-top: -100px !important;
    pointer-events: none;
    display: none;
  }
</style>

<script src="/path/to/cdn/jquery.slim.min.js"></script>
<script>
  $(document).ready(function() {
    $(".magnified").hover(
      function() {
        var imgposition = $(".magnify").position();
        var imgheight = $(".magnified").height();
        var imgwidth = $(".magnified").width();
        
        $(".magnifier").show();
        
        $(this).mousemove(function(a) {
          var posX = a.pageX - imgposition.left;
          var posY = a.pageY - imgposition.top;
          var percX = (posX / imgwidth) * 100;
          var percY = (posY / imgheight) * 100;
          var perc = percX + "% " + percY + "%";
          
          $(".magnifier").css({
            top: posY,
            left: posX,
            backgroundPosition: perc
          });
        });
      },
      function() {
        $(".magnifier").hide();
      }
    );
  });
</script>
