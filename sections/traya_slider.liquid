<div class="main_traya_slider">
  <div class="content_traya_slider">
    {% for block in section.blocks %}
    <div class="image_div_traya_slider">
      <img class="image_traya_slider" src="{{ block.settings.main_img1 | img_url:"master"}}"/>
    </div>
    <div class="container_traya_slider">
      <p class="heading_traya_slider">{{ block.settings.Heading_text }}</p>
      <ul class="">
        <li class="advantage_li">{{ block.settings.list_item_text }}</li>
      </ul>
      <div class="ingredients_div">
        <img class="image_ingredients_div" src="{{ block.settings.Ingredients_image | img_url:"master"}}"/>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Traya Slider",
    "settings": [],
    "blocks":[{
      "name":"PICK",
      "type":"Text",
      "settings":[{
        "type":"image_picker",
        "id":"main_img1",
        "label":"Main Image"
      },
      {
        "type":"text",
        "id":"Heading_text",
        "label":"Heading"
      },
      {
        "type":"text",
        "id":"list_item_text",
        "label":"Advantages"
      },
      {
        "type":"image_picker",
        "id":"Ingredients_image",
        "label":"Ingredients Image"
      }]
    }],
    "presets":[{"name":"Traya Slider"}]
  }
{% endschema %}

